html, body {
  position: relative
  // width: 100%
  // height: 100%
  margin: 0
  padding: 0
  // overflow: hidden
  -webkit-font-smoothing: antialiased
}

* {
  box-sizing: border-box
  font-family: 'Helvetica', '微軟正黑體', 'Microsoft JhengHei', '微軟雅黑體', 'Microsoft YaHei', 'sans-serif'
}

a {
  cursor: pointer

  &:hover {
    text-decoration: none
  }
}

ul, li {
  margin: 0
  padding: 0
  list-style-type: none
}

.router-link {
  text-decoration: none
}
