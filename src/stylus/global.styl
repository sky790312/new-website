html, body {
  position: relative
  width: 100vw
  height: 100vh
  min-height: 100vh
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
}

* {
  box-sizing: border-box
  font-family: 'Helvetica', '微軟正黑體', 'Microsoft JhengHei', '微軟雅黑體', 'Microsoft YaHei', 'sans-serif'
}

a {
  cursor: pointer

  &:hover {
    text-decoration: none
  }
}

ul, li {
  margin: 0
  padding: 0
  list-style-type: none
}

.router-link {
  text-decoration: none
}

.page-title {
  padding: 20px 0 0 20px
}
